<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gopaddler.app" version="0.9.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GoPaddler</name>
    <description>
        Track speed, distance and stroke rate using GoPaddler
    </description>
    <author email="joaquim.rego@gopaddler.com" href="http://gopaddler.com">
        GoPaddler Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.GeoBroker" />
    </feature>
    <access origin="https://hooks.slack.com/" />
    <access launch-external="yes" origin="geo:*" />
    <platform name="android">
        <preference name="AndroidLaunchMode" value="singleTop" />
        <icon density="mdpi" src="res/android/ic_launcher-mhdpi.png" />
        <icon density="hdpi" src="res/android/ic_launcher-hdpi.png" />
        <icon density="xhdpi" src="res/android/ic_launcher-xhdpi.png" />
        <icon density="xxhdpi" src="res/android/ic_launcher-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/ic_launcher-xxxhdpi.png" />
        <splash density="port-hdpi" src="res/android/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="res/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="res/android/splash-port-xxhdpi.png" />
        <splash density="port-xxhdpi" src="res/android/splash-port-xxxhdpi.png" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="21" />
    </platform>
    <platform name="ios">
        <icon height="29" src="res/ios/icon-small.png" width="29" />
        <icon height="40" src="res/ios/icon-40.png" width="40" />
        <icon height="50" src="res/ios/icon-50.png" width="50" />
        <icon height="57" src="res/ios/icon-57.png" width="57" />
        <icon height="58" src="res/ios/icon-small@2x.png" width="58" />
        <icon height="72" src="res/ios/icon-72.png" width="72" />
        <icon height="76" src="res/ios/icon-76.png" width="76" />
        <icon height="80" src="res/ios/icon-40@2x.png" width="80" />
        <icon height="87" src="res/ios/icon-29@3x.png" width="87" />
        <icon height="100" src="res/ios/icon-50@2x.png" width="100" />
        <icon height="114" src="res/ios/icon-57@2x.png" width="114" />
        <icon height="120" src="res/ios/icon-60@2x.png" width="120" />
        <icon height="144" src="res/ios/icon-72@2x.png" width="144" />
        <icon height="152" src="res/ios/icon-76@2x.png" width="152" />
        <icon height="167" src="res/ios/icon-83.5@2x.png" width="167" />
        <icon height="180" src="res/ios/icon-60@3x.png" width="180" />
        <hook src="src/cordova/ios/plist.js" type="before_build" />
    </platform>
    <preference name="FadeSplashScreen" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="1000" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="DisallowOverscroll" value="true" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="Fullscreen" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-console" spec="^1.0.7" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-device-motion" spec="^1.2.5" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
    <plugin name="cordova-plugin-facebook4" spec="^1.7.4">
        <variable name="APP_ID" value="529853143847598" />
        <variable name="APP_NAME" value="GoPaddler" />
    </plugin>
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-google-analytics" spec="^1.8.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-ios-longpress-fix" spec="^1.1.0" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-powermanagement" spec="^1.0.5" />
    <plugin name="cordova-plugin-screen-orientation" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-sqlite-storage" spec="^2.0.4" />
</widget>
